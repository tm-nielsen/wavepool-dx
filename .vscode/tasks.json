{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "build win64 project",
      "command": "gcc",
      "args": [
        "-o", "builds/win64/a.exe",
        "*.c",
        "-lraylib", "-lgdi32", "-lwinmm"
      ],
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    },
    {
      "type": "cppbuild",
      "label": "build web project",
      "command": "emcc",
      "args": [
        "-o", "builds/web/index.html",
        "test.c",
        "-Os", "-Wall",
        "web_dependencies/lib/libraylib.a",
        "-Iweb_dependencies/include", "-L.",
        "-s", "USE_GLFW=3",
        "-s", "ASYNCIFY",
        "--shell-file", "web_dependencies/minishell.html",
        "-DPLATFORM_WEB"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    }
  ]
}